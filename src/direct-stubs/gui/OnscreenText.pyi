        style: int = 1,
        pos: _OrderedPair = (0, 0),
        roll: float = 0,
        scale: float | _OrderedPair | None = None,
        fg: Vec4Like | None = None,
        bg: Vec4Like | None = None,
        shadow: Vec4Like | None = None,
        shadowOffset: _OrderedPair = (0.04, 0.04),
